<% if logged_in? %>
<div class="row">
	<aside class="col-md-4">

		<section class="user_info">
			<%= render 'shared/user_info' %>
		</section>

		<section class="micropost_form">
			<%= render 'shared/micropost_form' %>
		</section>

	</aside>
</div>

<% else %>

<div class="jumbotron center">
	<h1>
		Welcome to Sample App
	</h1>

	<h2>
		This is some filler text for the <%= link_to "Sample App", about_path %> sample application.
		<br /><br />
		Make sure to update Mailer for heroku before pushing live!
	</h2>
	<% if logged_in? %>
		<%= link_to "View your profile!", current_user, class: "btn btn-primary" %>
	<% else %>
		<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
	<% end %>
</div>

<div class="container">

</div>

<% end %>
